extends layout

block scripts
  // Third party libraries
  script(src="/javascripts/lib/jquery-1.8.2.min.js")
  script(src="/javascripts/lib/easeljs-0.5.0.min.js")
  script(src="/javascripts/lib/preloadjs-0.2.0.min.js")
  // Local libraries
  script(src='/socket.io/socket.io.js')
  script(src="/javascripts/game_mech/client.js")
  script(src="/javascripts/game_mech/Character.js")
  script(src="/javascripts/game_mech/Item.js")
  script(src="/javascripts/game_mech/sockets.js")
  link(rel='stylesheet', href='/stylesheets/lib/normalize.css')

block content
  h1= title
  form(name="login_form", action="#", method="get")
    | Username:
    input(type="text", name="user")
    | Password:
    input(type="text", name="pwd")
    input(type="submit", name="login", value="Submit")
  canvas#game(tabindex="1")
